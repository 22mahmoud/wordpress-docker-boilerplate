{
  "name": "22mahmoud/wordpress-docker-boilerplate",
  "type": "project",
  "license": "MIT",
  "description": "A Wordpress (bedrock) boilerplate with docker for development and vite for modern frontend",
  "homepage": "https://github.com/22mahmoud/wordpress-docker-boilerplate",
  "authors": [
    {
      "name": "Mahmoud Ashraf",
      "email": "hello@mahmoudashraf.dev",
      "homepage": "https://maw.sh"
    }
  ],
  "keywords": [
    "bedrock",
    "composer",
    "docker",
    "docker-compose",
    "vite",
    "wordpress",
    "wp",
    "wp-config"
  ],
  "scripts": {
    "lint": "phpcs",
    "lint:fix": "phpcbf"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": [
        "wpackagist-plugin/*",
        "wpackagist-theme/*"
      ]
    }
  ],
  "require": {
    "php": ">=8.3",
    "composer/installers": "^2.2",
    "vlucas/phpdotenv": "^5.5",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/bedrock-disallow-indexing": "^2.0",
    "roots/wordpress": "6.8",
    "roots/wp-config": "1.0.0",
    "wpackagist-theme/twentytwentyfive": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "*"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "composer/installers": true,
      "roots/wordpress-core-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "web/app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "web/app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    },
    "wordpress-install-dir": "web/wp"
  }
}
